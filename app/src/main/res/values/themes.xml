<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema di base per l'applicazione, impostato su SCURO di default -->
    <style name="Theme.LifeLog" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colori primari del brand -->
        <item name="colorPrimary">@color/dark_accent</item>
        <item name="colorPrimaryVariant">@color/dark_accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Colori secondari del brand -->
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Colori custom per la UI -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/dark_primary_text</item>
        <item name="android:textColorSecondary">@color/dark_secondary_text</item>
        <item name="colorSurface">@color/dark_surface</item> <!-- Per le CardView -->

        <!-- Colore della status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>
    </style>
</resources>