<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/text_view_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Impostazioni"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sezione Dati Utente -->
    <TextView
        android:id="@+id/label_user_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Dati Utente"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_settings_title" />

    <EditText
        android:id="@+id/edit_text_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints="name"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/label_user_data"
        app:layout_constraintStart_toStartOf="@+id/label_user_data"
        app:layout_constraintTop_toBottomOf="@+id/label_user_data" />

    <EditText
        android:id="@+id/edit_text_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints="name"
        android:hint="Cognome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_first_name"
        app:layout_constraintStart_toStartOf="@+id/edit_text_first_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_first_name" />

    <EditText
        android:id="@+id/edit_text_alias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints="username"
        android:hint="Alias (obbligatorio)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_last_name"
        app:layout_constraintStart_toStartOf="@+id/edit_text_last_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name" />

    <!-- Sezione Configurazione Server -->
    <TextView
        android:id="@+id/label_server_config"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Configurazione Server"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_alias"
        app:layout_constraintStart_toStartOf="@+id/edit_text_alias"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_alias" />

    <EditText
        android:id="@+id/edit_text_server_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints="url"
        android:hint="URL del server (obbligatorio)"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="@+id/label_server_config"
        app:layout_constraintStart_toStartOf="@+id/label_server_config"
        app:layout_constraintTop_toBottomOf="@+id/label_server_config" />

    <!-- Campo Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_server_url"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:hint="Password / Chiave (obbligatoria)"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Pulsante Salva -->
    <Button
        android:id="@+id/button_save_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Salva Impostazioni"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_input_layout_password"
        app:layout_constraintStart_toStartOf="@+id/text_input_layout_password" />

</androidx.constraintlayout.widget.ConstraintLayout>